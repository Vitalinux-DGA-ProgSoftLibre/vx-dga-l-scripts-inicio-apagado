#!/bin/bash
# postinst script for vx-dga-l-scripts-inicio-apagado
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	
	for FICH in "/usr/bin/vx-scripts-predisplay" \
		"/usr/bin/vx-scripts-inicio" \
		"/usr/bin/vx-scripts-apagado" ; do
		if test -f "${FICH}" ; then
			chmod +x "${FICH}"
		fi
	done

	for DIRECTORIO in /usr/share/vitalinux/prerun.d \
			/usr/share/vitalinux/postrun.d \
			/usr/share/vitalinux/predisplay.d ; do
		if test -d ${DIRECTORIO} ; then
			chmod +x ${DIRECTORIO}/*
		fi
	done

	if test -d /usr/share/vitalinux/predisplay.d ; then
		chmod +x /usr/share/vitalinux/predisplay.d/*
	fi

	# Borramos el posible rastro antiguo de session-cleaup-script, ya que lo haremos ordenado por lightdm.conf.d
	if grep "session-cleanup-script=" /etc/lightdm/lightdm.conf &> /dev/null ; then
        sed -i "/session-cleanup-script=.*/d" /etc/lightdm/lightdm.conf
    fi

    # Damos permiso de lectura a los archivos de configuraciÃ³n del ligthdm
    for FICHERO in "98-vitalinux-scripts-predisplay.conf" \
    	"99-vitalinux-scripts-stopdisplay.conf" ; do
	    if [ -f "/etc/lightdm/lightdm.conf.d/${FICHERO}" ] ; then
	    	chmod +r /etc/lightdm/lightdm.conf.d/${FICHERO}
	    fi
	done
	
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
